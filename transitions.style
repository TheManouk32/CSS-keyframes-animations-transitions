body {
	background-color: black;
}

.box {
	background-color: white;
	width: 200px;
	height: 200px;
	position: relative;
	margin: auto;
	top: 200px;
	transition-property: background, border-radius, transform;
	transition-duration: 2s, 2s;
	transition-delay: 1s;
	transition-timing-function: ease-in;

}

.box:hover{
	background: blue;
	border-radius: 50%;
	transform: rotate(185deg) scale(2.0);

}